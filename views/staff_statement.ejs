<div class="diverr">
    <h4><i class="fas fa-comment"></i> Create Staff Statement</h4>

    <div class="form_for_create">
     
        <%- include ('./partials/messages') %>
        <form action="/school/add_staffs_statement" method="POST" id="creatClassing">
        <div class="all-single-form">
            <div class="mb-3">
                <div class="hop">
                    <label for="excellent">Excellent Statement:</label>
                    <input type="excellent" name="excellent" value="<%= typeof  excellent != 'undefined' ?  excellent : '' %>" />
                </div>
                <div class="hop">
                    <label for="very_good">Very good Statement:</label>
                    <input type="very_good" name="very_good" value="<%= typeof very_good != 'undefined' ? very_good : '' %>" />
                </div>
            </div>
            <div class="mb-3">
               
                <div class="hop">
                    <label for="good">Good Statement:</label>
                    <input type="good" name="good" value="<%= typeof good != 'undefined' ? good : '' %>" />
                </div>

                <div class="hop">
                    <label for="pass">Pass Statement:</label>
                    <input type="pass" name="pass" value="<%= typeof pass != 'undefined' ? pass : '' %>" />
                </div>
            </div>
            <div class="mb-3">
               
                <div class="hop">
                    <label for="poor">Poor Statement:</label>
                    <input type="poor" name="poor" value="<%= typeof poor != 'undefined' ? poor : '' %>" />
                </div>

                <div class="hop">
                    <label for="vpoor">Very poor Statement:</label>
                    <input type="vpoor" name="vpoor" value="<%= typeof vpoor != 'undefined' ? vpoor : '' %>" />
                </div>
            </div>

    
       </div>   
    
       <div class="mb-3">
        <input type="submit" value="Ok? Create">
     </div>
       
     </form>
 
     
 </div>     

