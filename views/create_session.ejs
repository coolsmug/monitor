<%- include ('./include/header.ejs') %> 

<%- include ("./include/_dash_board.ejs") %>

   
<div class="diverr">
    <h4><i class="fas fa-hourglass-start"></i> Create New Session</h4>
    <div class="form_for_create">
    
        <%- include ('./partials/messages') %>
       <form action="/admin/add_session" method="POST">

        <div class="all-single-form">

            <div class="mb-3">
               <div class="hop">
                    <label for="roll_no">Roll_no</label>
                    <input 
                    type="number" 
                    name="roll_no" 
                    value="<%= typeof roll_no != 'undefined' ? roll_no : '' %>"/>
               </div>
               <div class="hop">
                    <label for="name">Name</label>
                    <input 
                    type="name"
                    name="name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"/>
               </div>
                
            </div>

            <div class="mb-3">
              <div class="hop">
                    <label for="classof">Class of</label>
                    <input 
                    type="classof"
                    name="classof"
                    placeholder="example: 2022/2023" 
                    value="<%= typeof classof != 'undefined' ? classof : '' %>"/>
              </div>
                    
            </div>
            
            <div class="mb-3">
                <div class="hop">
                    <label for="dating">From:</label>
                    <input 
                    type="date" 
                    name="date_started"
                    id="dating"
                    value="<%= typeof date_started != 'undefined' ? date_started : '' %>"/>
                </div>
                <div class="hop">
                    <label for="dating">To:</label>
                    <input 
                    type="date"
                    name="date_ended"
                    id="dating"
                    value="<%= typeof date_ended != 'undefined' ? date_ended : '' %>"/>

                </div>
               
            </div>

        </div>    
           
           
   
           <div class="mb-3">
              <input type="submit" value="Ok? Create">
           </div>
           
       
       </form>
   </div>
</div>
