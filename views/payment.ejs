<%- include ("./include/header.ejs") %> 
<%- include ("./include/_dash_board.ejs") %> 

<h2 class="ofhtwo"><i class="fas fa-cash-register"></i> Pay to get code to generate Voucher</h2>
<%- include ('./partials/messages') %> 

<form action="/admin/pay" method="POST" class="voucher-form">
   
  <label class="email-label" for="email">Email:</label>
  <input type="text" id="email" name="email" value="<%= user.email %>" readonly>
  <br>

  <label class="email-page" for="page">No of Page:</label>
  <input type="number" id="page" name="page" value="1" min="1">
  <br>

  <label class="email-amount" for="amount">Amount (â‚¦):</label>
  <input type="number" id="amount" name="amount" value="3000" readonly>
  <br>
    
  <button class="clickbutton" type="submit">Pay with PayStack</button>
</form>

<script>
  const pageInput = document.getElementById("page");
  const amountInput = document.getElementById("amount");

  pageInput.addEventListener("input", () => {
    const pages = parseInt(pageInput.value) || 1;
    amountInput.value = pages * 3000;
  });
</script>
  
