                       <a href="/admin/update-third?id=<%= third[i]._id %>" class="btn border-shadow update">
                        <i class="fas fa-edit"></i>
                       </a>
                       <a href="/admin//deletedthird/<%= third[i]._id %>" class="btn border-shadow delete" data-id="<%= third[i]._id %>">
                           <i class="fas fa-trash-alt"></i>
                       </a>
                   </div>
               </td>
           </tr>
           <% } %> 
       </tbody>
   </table>

    <% if (pages > 0) { %>
               <ul class="pagination text-center">
                   <% if (current == 1) { %>
                       <li class="disabled"><a>First</a></li>
                   <% } else { %>
                       <li><a href="/admin/all-section/1">First</a></li>
                   <% } %>
                   <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                   <% if (i !== 1) { %>
                       <li class="disabled"><a>...</a></li>
                   <% } %>
                   <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                       <% if (i == current) { %>
                           <li class="active"><a><%= i %></a></li>
                       <% } else { %>
                           <li><a href="/admin/all-section/<%= i %>"><%= i %></a></li>
                       <% } %>
                       <% if (i == Number(current) + 4 && i < pages) { %>
                           <li class="disabled"><a>...</a></li>
                       <% } %>
                   <% } %>
                   <% if (current == pages) { %>
                       <li class="disabled"><a>Last</a></li>
                   <% } else { %>
                       <li><a href="/admin/all-section/<%= pages %>">Last</a></li>
                   <% } %>
               </ul>
           <% } %>
</div>

