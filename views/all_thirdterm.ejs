 <% } %> <%  if(third[i].datenow) {%> 
    <% var Dating = third[i].datenow.toDateString() %> 
   <% } %> 

   <% if(!third[i].date_started){ %> 
      <% var Dated = third[i].date_started %> 
 <% } %> <%  if(third[i].date_started) {%> 
    <% var Dated = third[i].date_started.toDateString()  %> 
   <% } %> 

   <% if(!third[i].date_ended){ %> 
      <% var Datedd = third[i].date_ended %> 
 <% } %> <%  if(third[i].date_ended) {%> 
    <% var Datedd = third[i].date_ended.toDateString()  %> 
   <% } %>
           <tr>
