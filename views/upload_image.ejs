<%- include ('./include/header.ejs') %> 

<div class="allss">
    <div class="mon">
        <img src="https://res.cloudinary.com/dj6xdawqc/image/upload/v1713521761/monitor_gkgov5.png" alt="" width="200">
        <form action="/learner/logout" method="POST" class="logoutss">
            <button type="submit" class="nnnnn"><a href="#"> <i class="fas fa-arrow-circle-left"></i> </a></button>
        </form>
        <div class="imgss">
            <% if(user.img.url) {%> 
                 <img src="<%= user.img.url %>" alt="Learner Image" >
            <% } else {%> 
                <img src="https://res.cloudinary.com/dj6xdawqc/image/upload/v1713521761/image_mon_icon_jyx3cc.png" alt="" >
                <% } %> 
        </div> 
    </div>

    <div class="change_password">
        <%- include ('./partials/messages.ejs') %>  
        <form action="/learner/change-password" method="Post">
            <label for="email">Your Email</label>
            <input type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" id="email">
    
            <label for="passwords">Enter previous password</label>
            <input type="password" name="passwords" value="<%= typeof passwords != 'undefined' ? passwords : '' %>" id="password_one">
            
            <label for="password">Enter new password</label>
            <input type="password" name="passwording" value="<%= typeof passwording != 'undefined' ? passwording : '' %>" id="password_two">
            <input type="submit" value="Submit">
        </form>
    </div>


</div>


<footer class="foot">
    <h3>All rights reserved and Powered by: YiOL Tech <i class="fas fa-copyright"></i> 2022</h3>
  </footer>
