<style>
    .change_password {

        margin: auto;
        display: flex;
        flex-direction: column;
        width: 300px;
        justify-content: center;
        align-items: center;
        margin-top: 100px;
    }
    .change_password form{
      
        display: flex;
        flex-direction: column;
        width: 300px;
        justify-content:left;
        align-items: center;
        gap: 20px;

    }

    .change_password form input{
        padding: 9px 18px;
      border: none;
      outline: none;
      outline: 2px solid var(--deep-blue);
      color: var(--deep-blue);
      transition: .3s ease-in-out;
      font-weight: bolder;
  }

  .change_password form input[type= submit]{
      padding: 9px 18px;
      border: none;
      outline: none;
      outline: 2px solid (var(--deepest-blue));
      border: 2px solid var(--lighter-blue);
      color: var(--lighter-blue);
      background-color: var(--deepest-blue);
      transition: .3s ease-in-out;
      font-family: var(--montserrat);

  }

  .change_password form input[type= submit]:focus{
      padding: 10px 19px;
     
      outline: 3px solid var(--lighter-blue);
      border: 3px solid var(--deepest-blue);
      color: var(--lighter-blue);
      background-color: var(--deepest-blue);

  }


  .change_password form input[type= submit]:hover{
      padding: 7px 16px;
     
      outline: 1px solid var(--lighter-blue);
      border: 1px solid var(--white);
      color: var(--lighter-blue);
      background-color: var(--deep-blue);

  }

</style>







