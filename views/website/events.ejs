<%- include ("../website/include/header.ejs") %> 
   
    <!--====== PAGE BANNER PART START ======-->
    
    <section id="page-banner" class="pt-105 pb-110 bg_cover" data-overlay="8" style="background-image: url('<%= img.url %>')">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-banner-cont">
                        <h2>Events</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Events</li>
                            </ol>
                        </nav>
                    </div>  <!-- page banner cont -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== PAGE BANNER PART ENDS ======-->
   
    <!--====== EVENTS PART START ======-->
    
    <section id="event-page" class="pt-90 pb-120 gray-bg">
        <div class="container">
           <div class="row">
                <% if (eventList) {%>
                <% eventList.forEach(event => {%>
               <div class="col-lg-6">
                   <div class="singel-event-list mt-30">
                       <div class="event-thum">
                           <img src="<%= event.img.url %>" alt="Event">
                       </div>
                       <div class="event-cont">
                            <% let date = event.dates %>
                            <% let eventDate = new Date(date) %>
                            <%  let options = { day: 'numeric', month: 'long', year: 'numeric' };  %>
                            
                           <span><i class="fa fa-calendar"></i><%= eventDate.toLocaleDateString('en-US', options) %></span>
                            <a href="/single-event/<%= event.dates %>/<%= event.slug %>"><h4><%= event.event_name %></h4></a>
                            <span><i class="fa fa-clock-o"></i> <%= `${event.start} - ${event.end}` %></span>
                            <span><i class="fa fa-map-marker"></i><%= event.venue %></span>
                            <p><%= event.excerpt %></p>
                       </div>
                   </div>
               </div>
               <% })  %>
               <% } %>
              
           </div> <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <nav class="courses-pagination mt-50">
                        <ul class="pagination justify-content-lg-end justify-content-center">
                            <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a href="/all-events?page=<%= currentPage - 1 %>" aria-label="Previous">
                                <i class="fa fa-angle-left"></i>
                                </a>
                            </li>
                            <% } %>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item">
                                <a class="<%= i === currentPage ? 'active' : '' %>" href="/all-events?page=<%= i %>">
                                <%= i %>
                                </a>
                            </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a href="/all-events?page=<%= currentPage + 1 %>" aria-label="Next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                </div>
            </div>  <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== EVENTS PART ENDS ======-->
    <%- include ("../website/include/footer.ejs") %> 