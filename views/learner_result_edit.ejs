<%- include ('./include/header.ejs') %> 

<div class="middle_sweet">
    <div class="div_header_two">

    </div>
    <header class="staff-route">
        <img src="https://res.cloudinary.com/dj6xdawqc/image/upload/v1713521761/monitor_gkgov5.png" alt="" width="200">
       
          <div>
            <form action="/staff/logout" method="POST" class="logoutss">
                <button type="submit" class="nnnnn"><i class="fas fa-sign-out-alt"></i>Logout</button>
            </form>
          </div>    
        
              
          <div class="div-a">
            <a href="/staff/staff-route">home</a>
        </div>
       
    </header>

    <div class="cover_of_div">
       
        <div class="div_one_of_three twothree">
            <p class="p_of_p"> All Learners in <%= classed.name %> </p>
            <p class="p_of_p"><%= session.name %> </p>
            <% if (session.date_started) {%>
                <% var date = session.date_started.toDateString() %>
           <p style="margin: 0; padding: 0; margin-top: 10px; font-weight: bold;">Created On:</p> <p class="p_of_p" style="font-size: 12px; font-weight: none; text-shadow: none;"> <%= date %></p>
          <% } %>
    
                <div class="form-for-report">
                    <% for (var i = 0; i < users.length ; i++) {%> 
                
                        <div class="div_divol">
                            <a href="/staff/section-test-exam?sessionId=<%= session._id %>&classof=<%= session.classof %>&userId=<%= users[i]._id %>&classId=<%= classed._id %>">
                                <div class="avi">
                                    <% if (!users[i].img.url) { %>
                                        <img src="/img/monitor_user_image.jpg" alt="No Image" style="width: 50px; height: 50px;">
                                        <% } else if (users[i].img.url) { %>
                                        <img src="<%= users[i].img.url.replace('http://', 'https://') %>" alt="Learner Image" style="width: 50px; height: 50px;">
                                        <% } %>
                                </div>
                    
                                <div class="ddiv">
                                    <p><%= users[i].first_name %></p> <p> <%= users[i].last_name %> </p> <p> <%= users[i].middle_name %></p>  
                                </div>
                            </a>
                            <div class="match">
                               <p> <%= classed.name %> <%= classed.arm %></p>
                            </div>
                        </div>
                        
                        <% } %> 
           

        </div>


    </div>

</div>

<style>
    .ddiv{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 2px;
        width: 120px;
        top: 0px;
        font-size: 12px;
        justify-content: center;
        align-items: center;
    }

    .ddiv p {
        padding: 0;
        margin: 0;
    }
</style>


<footer class="foot">
    <h3>All rights reserved and Powered by: YiOL Tech <i class="fas fa-copyright"></i> 2022</h3>
  </footer>

