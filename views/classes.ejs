<%- include ('./include/header.ejs') %> 

<div class="middle_sweet">
    <div class="div_header_two">

    </div>
    <div class="div_header">
        <div class="img-div">
            <img src="/img/monitor.png" alt="">
        </div>
      
    </div>

    <div class="cover_of_div">
       
        <div class="div_one_of_three twothree">
            <p class="p_of_p"> All Classes for <%= session.name %> Session</p>

            <div class="form-for-report">
                <% for (var i = 0; i < classes.length ; i++) {%> 
            
                    <div class="div_divol">
                        <a href="/result/learner-test-exam/1?id=<%= session._id %>&class_code=<%= classes[i].class_code %>&arm=<%= classes[i].arm %>&id=<%= classes[i]._id %>">
                            <div class="avi">
                               <p><%= classes[i].roll_no %></p> 
                            </div>
                
                            <div class="ddiv">
                                <%= classes[i].name %>
                            </div>
                        </a>
                        <div class="match">
                           <p> <%= classes[i].class_code %> - <%= classes[i].arm %> </p>
                        </div>
                    </div>
                    
                    
                    <% } %> 

                    <% if (pages > 0) { %>
                        <ul class="pagination text-center">
                            <% if (current == 1) { %>
                                <li class="disabled"><a>First</a></li>
                            <% } else { %>
                                <li><a href="/result/current_class/1?id=<%= session._id %>">First</a></li>
                            <% } %>
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                                <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                <% if (i == current) { %>
                                    <li class="active"><a><%= i %></a></li>
                                <% } else { %>
                                    <li><a href="/result/current_class/<%= i %>?id=<%= session._id %>"><%= i %></a></li>
                                <% } %>
                                <% if (i == Number(current) + 4 && i < pages) { %>
                                    <li class="disabled"><a>...</a></li>
                                <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                                <li class="disabled"><a>Last</a></li>
                            <% } else { %>
                                <li><a href="/result/current_class/<%= pages %>?id=<%= session._id %>">Last</a></li>
                            <% } %>
                        </ul>
                    <% } %>
            </div>
        </div>
      

    </div>

</div>
<footer class="foot">
    <h3>All rights reserved and Powered by: YiOL Tech <i class="fas fa-copyright"></i> 2022</h3>
</footer>

