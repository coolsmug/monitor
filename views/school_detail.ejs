<%- include ("./include/header.ejs") %> 
<%- include ("./include/_dash_board.ejs") %> 

<div class="schoolDetail">
      <div class="schoolInfo">
        <div class="schoolImage">
            <% if(user.img.url) {%> 
              <img src="<%= user.img.url.replace('http://', 'https://') %>" alt="Learner Image">
           <% } else {%> 
               <img src="https://res.cloudinary.com/dj6xdawqc/image/upload/v1713521762/school_logo-01_rf6ogn.png" alt="" width="200">
               <% } %> 
              
        </div>
        <h4><i class="fab fa-orcid"></i> <%= school.school_id %></h4>
      
        <div class="schooName">
            <h2> <%= school.school_name %> </h2>
            <h4><i class="fas fa-caravan"></i> <%= school.school_motto %></h4>
            <h5><i class="fas fa-map-marker-alt"></i> <%= school.address %></h5>
            <h5><i class="fas fa-map-marker-alt"></i> <%= school.address2 %></h5>
        </div>
      </div>

      <div class="detailsOfSchool">
        <h3><i class="fas fa-flag"></i> <%= school.country %></h3>
        <h3><i class="fas fa-sign"></i> <%= school.state %></h3>
        <h3><i class="fas fa-mobile"></i> <%= school.phone_no %></h3>
        <h3><i class="fas fa-mobile"></i> <%= school.phone_no2 %></h3>
        <h3><i class="fas fa-envelope"></i> <%= school.email %></h3>
        <h3><i class="fas fa-globe"></i> <%= school.website %></h3>
      </div>

      <div class="anither">
        <h5>Date Created: <%= school.timestamps %></h5>

        <div class="form_delete_school">
<h1><a href="/admin/update-school?id=<%= school._id %>"><i class="fas fa-edit"></i></a>Edit</h1>
        </div>
        <div class="form_delete_school">
          <p> Suspend Account</p>
          <label class="switch">
            <input type="checkbox" id="mySwitch" data-user-id="<%= school._id %> " <%= school.status== true ? 'checked' : '' %> >
            <span class="slider">

            </span>
    </label>
        </div>

      </div>
</div>
<footer class="foot">
  <h3>All rights reserved and Powered by: YiOL Tech <i class="fas fa-copyright"></i> 2022</h3>
</footer>

<%- include ("./include/footer.ejs") %> 