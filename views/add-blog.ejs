<%- include ("./include/header.ejs") %> 

<%- include ("./include/_dash_board.ejs") %> 

<div class="diverr">
    <h4><i class="fas fa-house-user"></i>Add Event</h4>

    <div class="form_for_create">
        
        <%- include ('./partials/messages') %>
        
        <form action="/admin/create-blog" method="POST" enctype="multipart/form-data">

            <div class="all-single-form">
                <div class="mb-3">
                    <div class="hop">
                        <label for="author">Author:</label>
                        <input type="text" name="author" value="<%= typeof author != 'undefined' ? author : '' %>" />
                    </div>
                    <div class="hop">
                        <label for="category">Category:</label>
                        <input type="text" name="category" value="<%= typeof category != 'undefined' ? category : '' %>" />
                    </div>
                    <div class="hop">
                        <label for="headline">Headline:</label>
                        <input type="headline" name="headline" value="<%= typeof headline != 'undefined' ? headline : '' %>" />
                    </div>
                    <div class="hop">
                        <label for="content">Content:</label>
                        <textarea name="content" id="content" placeholder="Enter your text here..."></textarea>
                    </div>
                    <div class="hop">
                        <label for="img">Page Cover:</label>
                        <input type="file" name="img" id="img">
                    </div>
                    <div class="hop">
                        <label for="image">Image:</label>
                        <input type="file" name="image" id="image">
                    </div>
                </div>
            </div>                                                

            <div class="mb-3">
                <input type="submit" value="Ok? Publish">
            </div>
        </form>
    </div> 
</div>

<footer class="foot">
    <h3>All rights reserved and Powered by Dark theme code <i class="fas fa-copyright"></i> 2024</h3>
</footer>   

