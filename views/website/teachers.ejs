<%- include ("../website/include/header.ejs") %> 
    <!--====== PAGE BANNER PART START ======-->
    
    <section id="page-banner" class="pt-105 pb-110 bg_cover" data-overlay="8" style="background-image: url('<%= img ? img.url : "images/page-banner-1.jpg" %>')">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-banner-cont">
                        <h2>Managements/Staffs</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Managements/Staffs</li>
                            </ol>
                        </nav>
                    </div>  <!-- page banner cont -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== PAGE BANNER PART ENDS ======-->
   
    <!--====== TEACHERS PART START ======-->
    
     <section id="teachers-page" class="pt-90 pb-120 gray-bg">
        <div class="container">
           <div class="row">
                <% if (staffing ){%>
                    <% staffing.forEach(sfg => { %>
               <div class="col-lg-3 col-sm-6">
                   <div class="singel-teachers mt-30 text-center">
                        <div class="image">
                            <img src="<%= sfg.img.url ? sfg.img.url : 'https://res.cloudinary.com/dj6xdawqc/image/upload/v1756586318/emblems_qgaxgk.jpg' %>" alt="Teachers">
                        </div>
                        <div class="cont">
                            <a href="/profile/<%= sfg._id %>/<%= sfg.name %>"><h6><%= sfg.name %></h6></a>
                            <span><%= sfg.position %></span>
                        </div>
                    </div> <!-- singel teachers -->
               </div>
               <% }) %>
               <% } %>
               
           </div> <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <nav class="courses-pagination mt-50">
                        <ul class="pagination justify-content-lg-end justify-content-center">
                            <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a href="/all-staffs?page=<%= currentPage - 1 %>" aria-label="Previous">
                                <i class="fa fa-angle-left"></i>
                                </a>
                            </li>
                            <% } %>

                            <% for (let i = 1; i <= totalStaffs; i++) { %>
                            <li class="page-item">
                                <a class="<%= i === currentPage ? 'active' : '' %>" href="/all-staffs?page=<%= i %>">
                                <%= i %>
                                </a>
                            </li>
                            <% } %>

                            <% if (currentPage < totalStaffs) { %>
                            <li class="page-item">
                                <a href="/all-staffs?page=<%= currentPage + 1 %>" aria-label="Next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                </div>
            </div>  <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== TEACHERS PART ENDS ======-->
   
    <%- include ("../website/include/footer.ejs") %> 