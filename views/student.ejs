<div class="diverr">
    <h4> <i class="fas fa-chalkboard-teacher"> </i> Crate New Staff</h4>

    <div class="form_for_create">

        <%- include ('./partials/messages') %>
        <form action="/admin/add_staffs" method="post" id="creatClassing">
            <div class="all-single-form">
                <div class="mb-3">
                    <div class="hop">
                        <label for="roll">Roll Number:</label>
                        <input 
                        type="roll" 
                        name="roll" 
                        value="<%= typeof roll != 'undefined' ? roll : '' %>" />
                    </div>
                </div>
                <div class="hop">
                    <label for="name">Name:</label>
                    <input 
                    type="name" 
                    name="name" 
                    value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="hop">
                    <label for="email">Email:</label>
                    <input type="email" autocomplete="off" name="email" onkeyup="this.value=value.toLowerCase()" value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>

                <div class="hop">
                    <label for="email">Password 1:</label>
                    <input type="password" name="password" value="<%= typeof password != 'undefined' ?  password : '' %>" />
                  </div>
                  <div class="hop">
                    <label for="email">Password 2:</label>
                    <input type="password" name="password_2" value="<%= typeof password_2 != 'undefined' ?  password_2 : '' %>" />
                  </div>
               
            </div>

                <div class="mb-3">
                    <input type="submit" value="Ok? Create One">
                    </div>
                
          
        </form>
    
        
    </div>     
</div>

